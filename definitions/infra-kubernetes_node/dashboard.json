{
  "name": "Kubernetes node",
  "description": null,
  "pages": [
    {
      "name": "Kubernetes node",
      "description": null,
      "widgets": [
        {
          "visualization": {
            "id": "viz.billboard"
          },
          "layout": {
            "column": 1,
            "row": 1,
            "height": 3,
            "width": 4
          },
          "title": "Allocatable resources",
          "rawConfiguration": {
            "dataFormatters": [
              {
                "name": "Ephemeral storage bytes",
                "precision": null,
                "type": "humanized"
              },
              {
                "name": "Allocatable memory bytes",
                "precision": null,
                "type": "humanized"
              }
            ],
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "FROM Metric SELECT latest(k8s.node.allocatableCpuCores) AS 'Allocatable CPU cores', latest(k8s.node.allocatableMemoryBytes) AS 'Allocatable memory bytes', latest(k8s.node.allocatableEphemeralStorageBytes) AS 'Ephemeral storage bytes', latest(k8s.node.allocatablePods) AS 'Allocatable pods'"
              }
            ],
            "thresholds": []
          }
        },
        {
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 5,
            "row": 1,
            "height": 3,
            "width": 4
          },
          "title": "Memory usage (%)",
          "rawConfiguration": {
            "legend": {
              "enabled": false
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "FROM Metric SELECT max(k8s.node.allocatableMemoryUtilization) as 'Memory usage (%)' TIMESERIES"
              }
            ],
            "yAxisLeft": {
              "zero": true
            }
          }
        },
        {
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 9,
            "row": 1,
            "height": 3,
            "width": 4
          },
          "title": "CPU usage (%)",
          "rawConfiguration": {
            "legend": {
              "enabled": false
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "FROM Metric SELECT max(k8s.node.allocatableCpuCoresUtilization) as 'CPU usage (%)' TIMESERIES"
              }
            ],
            "yAxisLeft": {
              "zero": true
            }
          }
        },
        {
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 1,
            "row": 4,
            "height": 3,
            "width": 4
          },
          "title": "Storage usage (%)",
          "rawConfiguration": {
            "legend": {
              "enabled": false
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "FROM Metric SELECT max(k8s.node.fsCapacityUtilization) as 'Storage usage (%)' TIMESERIES"
              }
            ],
            "yAxisLeft": {
              "zero": true
            }
          }
        },
        {
          "visualization": {
            "id": "viz.area"
          },
          "layout": {
            "column": 5,
            "row": 4,
            "height": 3,
            "width": 4
          },
          "title": "Network Errors (per second)",
          "rawConfiguration": {
            "legend": {
              "enabled": false
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "FROM Metric SELECT max(k8s.node.netErrorsPerSecond) as 'Network errors per second' TIMESERIES AUTO "
              }
            ],
            "yAxisLeft": {
              "zero": true
            }
          }
        },
        {
          "visualization": {
            "id": "viz.area"
          },
          "layout": {
            "column": 9,
            "row": 4,
            "height": 3,
            "width": 4
          },
          "title": "Network Traffic (B/s)",
          "rawConfiguration": {
            "legend": {
              "enabled": true
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "FROM Metric SELECT max(k8s.node.netRxBytesPerSecond) as 'Receive bytes per second', max(k8s.node.netTxBytesPerSecond) as 'Transmit bytes per second' TIMESERIES"
              }
            ],
            "yAxisLeft": {
              "zero": true
            }
          }
        }
      ]
    }
  ]
}
